<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.slides.getStartedActivity">

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oh... Bhade Gadi"
        android:textColor="@android:color/white"
        android:padding="25dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_vehicle"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="25sp"
            android:onClick="vehicleHome"
            android:layout_marginBottom="40dp"
            android:background="@android:color/white"
            android:text="Vehicle Owner"
            android:textColor="#222222"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_getRide"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="25sp"
            android:onClick="getRide"
            android:background="@android:color/white"
            android:text="Get a Ride"
            android:textColor="#222222" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
